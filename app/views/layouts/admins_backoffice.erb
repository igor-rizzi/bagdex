<!DOCTYPE html>
<html>
  <head>
    <title>Bagdex - Initial Page</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= current_user ? current_user.email : "" %>
    <p>
    <%= current_admin ? current_admin.email : "" %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= link_to "Logoff User ->", destroy_user_session_path, method: :delete %>
    <p>
    <%= link_to "Logoff Admin ->", destroy_admin_session_path, method: :delete %>
  </head>

  <body>
    <p> Admin logado </p>
    <%= yield %>
  </body>
</html>
