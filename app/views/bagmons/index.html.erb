<p id="notice"><%= notice %></p>

<div class="container">
  
  <div style='display: flex; justify-content: space-between; margin-bottom: 15px; align-items: center;'>
    <h1>Bagmons</h1>
    <%= link_to 'New Bagmon', new_bagmon_path, class:"btn btn-success"%>
  </div>
  <div style='display: flex; flex-wrap: wrap; width: 100%; gap: 1rem; justify-content: space-between;'>
    <% @bagmons.each do |bagmon| %>
      <a style='border-radius: 20px; text-decoration: none; background: <%=bagmon.type.color %>' href='/bagmons/<%= bagmon.id %>'>
        <div style='border-radius: 20px; color: white; display: flex; flex-direction: column; justify-content: center; align-items: center; height: 100%;'>
          <h2><%= bagmon.name %></h2>
          <div style='border-radius: 20px; width: 100%; height: 100%; display: flex; justify-content: center; align-items: center;'>
            <%= image_tag bagmon.image, size: "250x250" %>
          </div>
        </div>
      </a>
    <% end %>
  </div>
  </div>

<br>


